{
  "project": {
    "name": "Supertool",
    "philosophy": "Modular, lightweight, no-database Laravel utility platform",
    "core_principle": "Solve many small real problems with the smallest clean solutions"
  },

  "global_rules": {
    "decision_hierarchy": [
      "simplicity_over_abstraction",
      "readability_over_cleverness",
      "explicit_over_magic",
      "local_over_global",
      "stateless_over_persistence"
    ],
    "forbidden_by_default": [
      "database",
      "queues",
      "jobs",
      "events",
      "observers",
      "policies",
      "background_tasks",
      "third_party_services"
    ],
    "determinism": {
      "same_input_same_output": true,
      "randomness_allowed": false,
      "side_effects_allowed": false
    },
    "fail_fast": {
      "validate_early": true,
      "silent_failure": false,
      "error_style": [
        "clear",
        "human_readable",
        "actionable"
      ]
    },
    "modularity_contract": {
      "tool_independence": true,
      "tool_removable": true,
      "no_cross_tool_dependency": true,
      "no_core_override": true
    }
  },

  "agents": {
    "architect": {
      "role": "System Architect",
      "mission": "Define and protect overall system design, constraints, and extensibility",
      "allowed_actions": [
        "define_folder_structure",
        "define_conventions",
        "approve_or_reject_architecture",
        "propose_scalable_patterns"
      ],
      "must_enforce": [
        "no_database_policy",
        "modularity_contract",
        "decision_hierarchy"
      ],
      "must_reject": [
        "overengineering",
        "premature_abstraction",
        "feature_creep"
      ]
    },

    "backend_builder": {
      "role": "Laravel Backend Engineer",
      "mission": "Implement tools and core logic following Laravel golden rules",
      "constraints": {
        "controllers": {
          "max_lines": 40,
          "allowed": [
            "request_validation",
            "service_call",
            "return_response"
          ],
          "forbidden": [
            "business_logic",
            "heavy_string_manipulation",
            "nested_conditionals"
          ]
        },
        "services": {
          "stateless": true,
          "framework_agnostic": true,
          "no_http_awareness": true,
          "no_persistence": true
        },
        "blade": {
          "allowed": [
            "rendering",
            "simple_conditions",
            "loops"
          ],
          "forbidden": [
            "business_logic",
            "data_transformation",
            "validation"
          ]
        }
      },
      "folder_convention": "app/Tools/{ToolName}/{ToolController,ToolService,ToolConfig}",
      "naming_rules": {
        "controller": "Verb+Tool+Controller",
        "service": "Tool+Service",
        "view": "tools/tool-name.blade.php"
      }
    },

    "tool_designer": {
      "role": "Tool Designer",
      "mission": "Design small, focused tools with clean UX and strict scope",
      "rules": {
        "single_problem_focus": true,
        "minimal_inputs": true,
        "no_state": true,
        "no_persistence": true
      },
      "ux_constraints": {
        "single_step": true,
        "minimal_fields": true,
        "immediate_output": true,
        "copy_ready": true
      }
    },

    "tool_whatsapp_link": {
      "role": "WhatsApp Link Tool Agent",
      "objective": "Generate WhatsApp chat links without saving phone numbers",
      "inputs": {
        "phone": {
          "required": true,
          "type": "string",
          "rules": [
            "digits_only",
            "country_code_required",
            "no_spaces",
            "no_symbols"
          ]
        },
        "message": {
          "required": false,
          "type": "string",
          "rules": [
            "url_encoded",
            "reasonable_length"
          ]
        }
      },
      "processing": [
        "strip_non_numeric_phone",
        "encode_message",
        "no_storage",
        "no_logging"
      ],
      "outputs": {
        "success": [
          "https://wa.me/{phone}",
          "https://wa.me/{phone}?text={encoded_message}"
        ],
        "error": {
          "style": [
            "human_readable",
            "stateless",
            "non_technical"
          ]
        }
      },
      "security": [
        "escape_output",
        "prevent_xss",
        "no_sessions",
        "no_tracking"
      ],
      "extensibility": {
        "no_global_override": true,
        "tool_removable": true,
        "self_registered": true
      }
    },

    "reviewer": {
      "role": "Strict Code Reviewer",
      "mission": "Enforce all rules and reject violations",
      "review_checks": [
        "rule_violation_detection",
        "unnecessary_complexity",
        "scope_creep",
        "non_determinism",
        "hidden_side_effects"
      ],
      "on_violation": {
        "action": [
          "reject_solution",
          "explain_violation",
          "propose_compliant_alternative"
        ]
      }
    }
  }
}
